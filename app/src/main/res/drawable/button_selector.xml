<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado seleccionado -->
    <item android:state_selected="true" android:color="#2a2a55"/> <!-- Color rojo cuando está seleccionado -->

    <!-- Estado presionado -->
    <item android:state_pressed="true" android:color="#282847"/> <!-- Color cuando está presionado (naranja) -->

    <!-- Estado normal -->
    <item android:color="#52517D"/> <!-- Color por defecto (gris) -->
</selector>