<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado seleccionado -->
    <item android:state_selected="true" android:color="#1d2d4e"/> <!-- Color rojo cuando está seleccionado -->

    <!-- Estado presionado -->
    <item android:state_pressed="true" android:color="#4b4b8b"/> <!-- Color cuando está presionado (naranja) -->

    <!-- Estado normal -->
    <item android:color="#51517d"/> <!-- Color por defecto (gris) -->
</selector>